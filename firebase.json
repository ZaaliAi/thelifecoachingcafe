{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9112,
      "host": "127.0.0.1"
    },
    "firestore": {
      "port": 8094,
      "host": "127.0.0.1"
    },
    "ui": {
      "enabled": true,
      "port": 4013,
      "host": "127.0.0.1"
    }
  }
}